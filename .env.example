# SDR Assignment System Environment Configuration

# Application Settings
NODE_ENV=production
APP_NAME=SDR Assignment System
APP_VERSION=1.0.0

# Backend Configuration
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-must-be-32-chars-minimum
JWT_EXPIRES_IN=24h

# Database Configuration (PostgreSQL)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=sdr_assignment_system
DB_USER=postgres
DB_PASSWORD=change-this-secure-password

# Redis Configuration (Optional)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password

# Assignment Business Rules
MAX_ACTIVE_ASSIGNMENTS_PER_CONSULTANT=3
RECENT_ASSIGNMENT_PENALTY_HOURS=4
SAME_SDR_COOLDOWN_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
AUDIT_LOG_RETENTION_DAYS=90

# Security Settings
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Settings
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com
CORS_CREDENTIALS=true

# Frontend Configuration
REACT_APP_API_URL=/api
REACT_APP_APP_NAME=SDR Assignment System