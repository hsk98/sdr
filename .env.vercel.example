# Vercel Environment Variables
# Copy these to your Vercel project settings: Settings â†’ Environment Variables

# Database Configuration
DB_TYPE=supabase
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.[YOUR-ANON-KEY]

# Application Configuration
NODE_ENV=production
PORT=3001

# JWT Configuration (generate a secure secret)
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-vercel
JWT_EXPIRES_IN=8h

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-vercel-deployment
SESSION_TIMEOUT=28800000

# CORS Configuration (add your Vercel domain)
ALLOWED_ORIGINS=https://your-app-name.vercel.app,https://your-custom-domain.com

# Security Configuration
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-for-pii-data
MFA_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Logging (for production)
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=false
MAX_AUDIT_LOGS=50000

# Backup Configuration (optional for Vercel)
# BACKUP_INTERVAL_HOURS=24
# MAX_BACKUPS=7

# Data Retention (GDPR compliance)
DATA_RETENTION_DAYS=2555

# Server Instance Identifier
SERVER_INSTANCE=vercel-serverless

# Application Version
APP_VERSION=1.0.0

# HTTPS Configuration (Vercel handles this)
HTTPS_ENABLED=true
REDIRECT_HTTP=true

# Email Configuration (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=true
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password