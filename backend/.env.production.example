# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
HTTPS_ENABLED=true
HTTPS_PORT=3443
REDIRECT_HTTP=true

# Database Configuration
DATABASE_URL=./database.sqlite
DB_ENCRYPTION_ENABLED=true
DB_ENCRYPTION_KEY_PATH=/etc/secrets/db-encryption-key
# OR set directly (less secure):
# DB_ENCRYPTION_KEY=your-32-byte-hex-key

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters
JWT_EXPIRES_IN=8h

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-change-in-production
SESSION_TIMEOUT=28800000

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key
SSL_CA_PATH=/etc/ssl/certs/ca-bundle.crt

# CORS Configuration
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# API Security
API_KEYS=hashed-api-key-1,hashed-api-key-2

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Encryption
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-for-pii

# Backup Configuration
BACKUP_DIR=/var/backups/sdr-system
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key
BACKUP_INTERVAL_HOURS=24
MAX_BACKUPS=30

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_FILE_LOGGING=true
LOG_DIRECTORY=/var/log/sdr-system
MAX_AUDIT_LOGS=100000

# MFA Configuration
MFA_ENABLED=true

# Data Retention (GDPR)
DATA_RETENTION_DAYS=2555

# Monitoring
SERVER_INSTANCE=prod-server-1
APP_VERSION=1.0.0

# Email Configuration (if needed)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@your-domain.com
SMTP_PASS=your-email-password

# Additional Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=https://your-domain.com/csp-report